<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Latihan_2_1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:foregroundGravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent">
        <SearchView
            android:id="@+id/searchView_lat_2_1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginEnd="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@id/imgViewCart_lat_2_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/black"
            android:background="@drawable/search_view_bg"
            android:queryHint="Search Here ..."
            android:iconifiedByDefault="false"/>
        <ImageView
            android:id="@+id/imgViewCart_lat_2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:src="@drawable/shopping_cart_24px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@id/imgViewMenu_lat_2_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/black"/>
        <ImageView
            android:id="@+id/imgViewMenu_lat_2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_24px"
            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/black" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleView_lat_2_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always"
        android:scrollbars="vertical"
        android:orientation="vertical"
        />

</LinearLayout>